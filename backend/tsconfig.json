{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./src",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "lib",
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "sourceMap": true,
    "target": "es6",
    "paths": {
      "@shared/*": ["../../@shared/*"]
    }
  },
  "include": ["./src"],
  "exclude": [
    "lib", 
    "node_modules", 
    "tools", 
    "jest.config.js"
  ]
}
